<!DOCTYPE html>
<html lang="en">

<% include ./_header %>

<body>
    <!-- Navigation -->
    <nav class="navbar navbar-default navbar-fixed-top topnav" role="navigation">
        <div class="container topnav">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand topnav" href="#">PiggyBank</a>
            </div>
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav navbar-right">
                    <li>
                        <a href="#about">About</a>
                    </li>
                    <li>
                        <a href="#services">Sign-up</a>
                    </li>
                    <li>
                        <a href="#contact">Log-in</a>
                    </li>
                </ul>
            </div>
            <!-- /.navbar-collapse -->
        </div>
        <!-- /.container -->
    </nav>
    <!-- Header -->
    <a name="about"></a>
    <div class="intro-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">

                        <h1>PiggyBank</h1>
                        <h3>A penny here, a penny there - save for what you want!</h3>
                        <hr class="intro-divider">

                        <% include ./_bankform %>

                    </div>
                </div>
            </div>
        </div>
        <!-- /.container -->
    </div>

    <!-- Banks container -->
    <div class="container">
        <div class="row">          
            <div class="col-md-6 col-sm-offset-1">
                <h2 class="section-heading">Your Banks:</h2>
                <!-- Bank Well -->
                <ul class="bank-list">
                    <% banks.forEach(function(bank) { %>
                       <li id = '<%=bank._id%>'>
                            <div class ='well bank-list-wrapper'> 
                                <h4><%=bank.itemName%></h4>
                                <span class='glyphicon glyphicon-pencil'></span>
                                <p class='pull-right'>Date Created: <%=bank.date%></p>
                                <div class = 'bank-details'>
                                    <a href='#' class='btn primary' data-toggle="modal" data-target=".bs-example-modal-sm">
                                    <img src = '/img/capPoint.png'/>
                                    </a>
                                    <h5>Add Cash!</h5>
                                    <div class='progress'> 
                                    <div class='progress-bar' style='width:<%=bank.progress%>%' aria-valuenow="70"
                                    aria-valuemin="0" aria-valuemax="100">$<%=bank.cash_added%>/<span class='item_price'><%=bank.price%></span></div> 
                                    </div> 
                                </div>
                                <a href="#" class='btn delete'>Delete bank...</a>
                            </div> 
                        </li>
                    <% }); %>
                </ul>
            </div>
        </div>
    </div>
    <!-- /.container -->
   
    <!-- Add cash Modal-->
    <div class="modal fade bs-example-modal-sm" tabindex="-1" role="dialog" aria-labelledby="mySmallModalLabel">
        <form id='addCash-form'>
            <div class="modal-dialog modal-sm form-group">
                <div class="input-group">
                <span class="input-group-addon">$</span>
                <input type="hidden" class="bankId">
                <input type="text" id="cashValue" class="form-control" aria-label="Amount (to the nearest dollar)" placeholder="0">
                <span class="input-group-addon btn cash-submit" type='submit'>Add!</span>
                </div>
            </div>
        </form>
    </div>
    <!-- /.Add cash Modal -->


    <!-- Edit/Delete Modal  -->


    <!-- Edit/Delete Modal -->


    <!-- Footer -->

</body>
</html>
